<?xml version="1.0" encoding="UTF-8"?>

<launch>

  <arg name="param_file" default="$(find-pkg-share gnss_compass)/config/gnss_compass.yaml" />

  <arg name="input_main_gnss_topic" default="/main/mosaic/gga" description="Main gnss topic"/>
  <arg name="input_sub_gnss_topic" default="/sub/mosaic/gga" description="Sub gnss topic"/>
  <arg name="output_pose_topic" default="gnss_pose" description="Estimated self position" />

  <node pkg="gnss_compass" name="gnss_compass" exec="gnss_compass">
    <remap from="main_gnss_gga" to="$(var input_main_gnss_topic)" />
    <remap from="sub_gnss_gga" to="$(var input_sub_gnss_topic)" />
    <remap from="gnss_compass_pose" to="$(var output_pose_topic)" />
    <param from="$(var param_file)" />
  </node>

</launch>