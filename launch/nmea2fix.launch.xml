<?xml version="1.0" encoding="UTF-8"?>

<launch>

  <arg name="sub_nmea_sentence_topic1" default="/sensing/gnss/nmea_sentence"/>
  <arg name="pub_fix_topic_name1" default="/main/mosaic/fix"/>
  <arg name="pub_gga_topic_name1" default="/main/mosaic/gga"/>
  <arg name="pub_rmc_topic_name1" default="/main/mosaic/rmc"/>
  <arg name="output_gga" default="true"/>
  <arg name="output_rmc" default="true"/>

  <node pkg="nmea2fix" name="nmea2fix_node1" exec="nmea2fix" output="screen">
    <param name="sub_topic_name" value="$(var sub_nmea_sentence_topic1)"/>
    <param name="pub_fix_topic_name" value="$(var pub_fix_topic_name1)"/>
    <param name="pub_gga_topic_name" value="$(var pub_gga_topic_name1)"/>
    <param name="pub_rmc_topic_name" value="$(var pub_rmc_topic_name1)"/>
    <param name="output_gga" value="$(var output_gga)"/>
    <param name="output_rmc" value="$(var output_rmc)"/>
  </node>

  <arg name="sub_nmea_sentence_topic2" default="/sensing/sub_gnss/nmea_sentence"/>
  <arg name="pub_fix_topic_name2" default="/sub/mosaic/fix"/>
  <arg name="pub_gga_topic_name2" default="/sub/mosaic/gga"/>
  <arg name="pub_rmc_topic_name2" default="/sub/mosaic/rmc"/>

  <node pkg="nmea2fix" name="nmea2fix_node2" exec="nmea2fix">
    <param name="sub_topic_name" value="$(var sub_nmea_sentence_topic2)"/>
    <param name="pub_fix_topic_name" value="$(var pub_fix_topic_name2)"/>
    <param name="pub_gga_topic_name" value="$(var pub_gga_topic_name2)"/>
    <param name="pub_rmc_topic_name" value="$(var pub_rmc_topic_name2)"/>
    <param name="output_gga" value="$(var output_gga)"/>
    <param name="output_rmc" value="$(var output_rmc)"/>
  </node>

</launch>
